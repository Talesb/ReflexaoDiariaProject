    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%

			PensamentoDao pesdao = new PensamentoDao();
			List<Pensamento> listap1 = pesdao.findall();
          
			session.setAttribute("lista", listap1);
          %>
          <c:forEach var="p" items="${lista}">
          <div class="post-preview">
            <a href="post.html">
              <h2 class="post-title">
                ${p.nome}
              </h2>
              <h3 class="post-subtitle">
                 ${p.conteudo}
              </h3>
            </a>
            <p class="post-meta">Postado por 
              <a>${p.usuario.nome}</a>
              on ${p.data}</p>
          </div>
          </c:forEach>
          
          <!-- Pager -->
          <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
